groups:
- name: hardware
  rules:
  - alert: NodeHighTemperature
    expr: node_hwmon_temp_celsius > 60 
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Node {{ $labels.instance }} chip {{ $labels.chip }} temperature >60c"
      description: 'Temperature is currently {{ $value | humanizePercentage }} on chip {{ $labels.chip }} sesnor {{ $labels.sensor }}'
