groups:
- name: memory
  rules:
  - alert: NodeHighMemoryUsage
    expr: ((node_memory_MemTotal_bytes - node_memory_MemFree_bytes) / node_memory_MemTotal_bytes) > 0.8
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Node {{ $labels.instance }} has RAM usage >80%"
      description: 'RAM usage is currently {{ $value | humanizePercentage }} on {{ $labels.instance }}'
